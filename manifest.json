{
  "manifest_version": 3,
  "name": "Convert Date Context Menu On Selection",
  "version": "1.0",
  "description": "Shows a context menu with selected text and sub context menu of timezone converted dates.",
  "permissions": ["contextMenus", "scripting", "activeTab", "notifications", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
